
auto lo
iface lo inet loopback
    address 10.0.0.12/32

auto eth0
iface eth0 inet dhcp

# uplinks
auto swp51
iface swp51
    address 10.1.0.5/31

auto swp52
iface swp52
    address 10.1.0.7/31

# bridge to hosts
auto swp2
iface swp2

auto br0
iface br0
    bridge-ports swp1 swp2
    address 172.16.2.1/24
